<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui_profile.profile.ProfileActivity"
    android:orientation="vertical">
    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <com.example.firstproject.ui_profile.custom.AspectRatioImageView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:scaleType="centerCrop"
            android:src="@drawable/lake"
            app:aspectRatio="3"
             />
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            >
            <ImageButton
                android:id="@+id/btn_switch_theme"
                android:layout_width="@dimen/btn_round_size_40"
                android:layout_height="@dimen/btn_round_size_40"
                android:background="@drawable/btn_round_bg"
                android:src="@drawable/ic_brightness_high_24"
                android:layout_toStartOf="@+id/iv_avatar"
                android:layout_marginEnd="@dimen/spacing_huge_32"
                android:layout_marginTop="36dp"/>
            <ImageView
                android:id="@+id/iv_avatar"
                android:layout_width="@dimen/avatar_round_size"
                android:layout_height="@dimen/avatar_round_size"
                android:src="@drawable/avatar_default"
                android:layout_centerHorizontal="true"/>

            <ImageButton
                android:id="@+id/btn_edit"
                android:layout_width="@dimen/btn_round_size_40"
                android:layout_height="@dimen/btn_round_size_40"
                android:layout_marginStart="@dimen/spacing_huge_32"
                android:layout_marginTop="36dp"
                android:layout_toEndOf="@+id/iv_avatar"
                android:background="@drawable/btn_round_bg"
                android:src="@drawable/ic_edit_24" />
            <TextView
                style="@style/Profile.Header.Nickname"
                android:id="@+id/tv_nick_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/iv_avatar"
                android:text="Kelly Jons"
                android:layout_centerHorizontal="true"
                />
            <TextView
                style="@style/Profile.Header.Rank"
                android:id="@+id/tv_rank"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/tv_nick_name"
                android:text="Junior Android Developer"
                android:layout_centerHorizontal="true"/>
        </RelativeLayout>
    </FrameLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:background="@color/color_primary_light">
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical"
            android:gravity="center"
            android:paddingTop="@dimen/spacing_normal_16"
            android:paddingBottom="@dimen/spacing_normal_16">
            <TextView
                style="@style/Profile.Metrix.Value"
                android:id="@+id/tv_rating"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="0"
                android:drawableStart="@drawable/ic_grade_24" />
            <TextView
                style="@style/Profile.Metrix.Label"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Рейтинг"/>
        </LinearLayout>
        <View android:layout_width="1dp"
            android:layout_marginTop="@dimen/spacing_normal_16"
            android:layout_marginBottom="@dimen/spacing_normal_16"
            android:layout_height="match_parent"
            android:background="@color/color_divider_light">
            </View>
<LinearLayout
    android:layout_width="0dp"
    android:layout_height="wrap_content"
    android:layout_weight="1"
    android:orientation="vertical"
    android:gravity="center"
    android:paddingTop="@dimen/spacing_normal_16"
    android:paddingBottom="@dimen/spacing_normal_16">
    <TextView
        style="@style/Profile.Metrix.Value"
        android:id="@+id/tv_respect"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="0"
        android:drawableStart="@drawable/ic_rate_24"
        />
    <TextView
        style="@style/Profile.Metrix.Label"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Уважение"/>
</LinearLayout>
    </LinearLayout>

    <RelativeLayout
        style="@style/Profile.InfoItem"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingTop="@dimen/spacing_normal_16"
        android:paddingBottom="8sp">
        <ImageView
            android:id="@+id/ic_avatar"
            android:layout_width="@dimen/btn_round_size_40"
            android:layout_height="@dimen/btn_round_size_40"
            android:src="@drawable/ic_avatar" />

        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/w_first_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/spacing_normal_16"
            android:layout_toEndOf="@+id/ic_avatar">

            <EditText
                android:id="@+id/et_first_name"
                style="@style/Profile.EditText.Single"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="@string/profile_hint_first_name"
                android:imeOptions="actionNext"
                android:inputType="textPersonName"
                tools:text="Kelly" />
        </com.google.android.material.textfield.TextInputLayout>

        <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/w_last_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/spacing_normal_16"
        android:layout_toEndOf="@+id/ic_avatar"
            android:layout_below="@+id/w_first_name"
        >

            <EditText
                android:id="@+id/et_last_name"
                style="@style/Profile.EditText.Single"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="@string/profile_hint_last_name"
                android:imeOptions="actionNext"
                android:inputType="textPersonName"
                tools:text="Jons" />
    </com.google.android.material.textfield.TextInputLayout>
    </RelativeLayout>
        <View
            android:layout_marginStart="@dimen/space_maximum_56"
            android:id="@+id/divider_1"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="?attr/colorDivider"
            android:layout_marginEnd="@dimen/spacing_normal_16">
        </View>

        <LinearLayout
            style="@style/Profile.InfoItem"
            android:id="@+id/ui_about"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            >

            <ImageView
                android:id="@+id/ic_about"
                android:layout_width="@dimen/btn_round_size_40"
                android:layout_height="@dimen/btn_round_size_40"
                android:src="@drawable/ic_about" />

            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/wr_about"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/spacing_normal_16"
                android:enabled="false"
                app:counterMaxLength="128">

                <EditText
                    style="@style/Profile.EditText.Multiline"
                    android:id="@+id/et_about"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="@string/profile_hint_about"
                    android:inputType="textMultiLine"
                    android:imeOptions="actionNext"
                    />
            </com.google.android.material.textfield.TextInputLayout>
        </LinearLayout>

        <View
            android:layout_marginStart="@dimen/space_maximum_56"
            android:id="@+id/divider_2"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="?attr/colorDivider"
            android:layout_marginEnd="8dp">
        </View>
        <LinearLayout
            android:id="@+id/ui_repos"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            style="@style/Profile.InfoItem">

            <ImageView
                android:id="@+id/ic_repoc"
                android:layout_width="@dimen/btn_round_size_40"
                android:layout_height="@dimen/btn_round_size_40"
                android:src="@drawable/ic_repoc" />

            <com.google.android.material.textfield.TextInputLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/spacing_normal_16"
                android:layout_weight="1"
                >

                <EditText
                    style="@style/Profile.EditText.Single"
                    android:id="@+id/et_repos"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="@string/profile_hint_repository"
                    android:inputType="textUri"
                    android:imeOptions="actionDone"/>
            </com.google.android.material.textfield.TextInputLayout>
            <ImageView
                android:id="@+id/ic_eye"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:layout_marginLeft="@dimen/spacing_normal_16"
                android:src="@drawable/ic_eye"
                android:layout_gravity="center_vertical"
                />
        </LinearLayout>
        <View
            android:layout_marginStart="@dimen/space_maximum_56"
            android:id="@+id/divider_3"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="?attr/colorDivider"
            android:layout_marginEnd="@dimen/spacing_normal_16">
        </View>
</LinearLayout>